<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#add-modal">
      <i class="fas fa-plus"> </i>
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>No</th>
            <th>Name</th>
            <th>Type</th>
            <th>Balance</th>
            <th>User</th>
            <th>Image Url</th>
            <th style="text-align: center">Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i = 0; i< account.length; i++ ){ %>
          <tr>
            <td><%= i+1 %></td>
            <td><%= account[i].accName %></td>
            <td><%= account[i].accType %></td>
            <td><%= account[i].balance %></td>
            <td><%= account[i].userId.userName %></td>
            <td style="text-align: center">
              <img src="https://admin-pocketlist.herokuapp.com/<%= account[i].accImageUrl %>" alt="imageUrl"
                height="35px" />
                https://admin-pocketlist.herokuapp.com/<%= account[i].accImageUrl %>
            </td>
            <td style="text-align: center">
              <form action="/admin/account/<%= account[i].id %>?_method=DELETE" method="POST">
                <a href="javascript:void(0);" type="button" class="button-update" style="color: #fa991c"
                  data-id="<%= account[i].id %>" data-name="<%= account[i].accName %>"
                  data-type="<%= account[i].accType %>" data-balance="<%= account[i].balance %>"
                  data-image="<%= account[i].accImageUrl %>" data-user="<%= account[i].userId._id %>"><i
                    class="fas fa-pencil-alt pr-2"></i></a>
                <button type="submit" href="" style="color: #fa991c" class="btn-delete pr-4">
                  <i class="fas fa-trash-alt"></i>
                </button>
              </form>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>