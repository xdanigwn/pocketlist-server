<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Update User</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/user?_method=PUT" method="POST">
        <div class="container">
          <div class="modal-body">
            <div class="form-group row pr-3">
              <label class="col-4" for="fullname">Full Name</label>
              <input class="col-8 form-control fullName" type="text" id="fullName" name="fullName" required />
            </div>
            <div class="form-group row pr-3">
              <label class="col-4" for="username">Username</label>
              <input class="col-8 form-control userName" type="text" id="userName" name="userName" required />
            </div>
            <div class="form-group row pr-3">
              <label class="col-4" for="pass">Password</label>
              <input class="col-8 form-control pass" type="password" id="pass" name="pass" required />
            </div>
            <div class="form-group row pr-3">
              <label class="col-4" for="name">Role</label>
              <select class="col-8 custom-select role" id="role" name="role">
                <option selected>Pilih...</option>
                <option value="Admin">Admin</option>
                <option value="User">User</option>
              </select>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" class="id" name="id" />
          <button type="button" class="btn btn-light" data-dismiss="modal">
            Close
          </button>
          <button type="submit" class="btn btn-primary">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>